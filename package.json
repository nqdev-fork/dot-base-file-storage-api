{
  "name": "file-storage-api",
  "description": "API submit files using multipart forms and statically serve them afterwards.",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch 'src/**/*' -e ts --exec 'npm run watch'",
    "watch": "npm run lint && npm run prettier && npm run development",
    "lint": "eslint 'src/**' --ext .ts --fix",
    "lint-without-fix": "eslint 'src/**' --ext .ts",
    "test": "jest --passWithNoTests --runInBand",
    "prettier": "prettier --write 'src/**/*'",
    "development": "NODE_ENV=development node --inspect=9229 -r tsconfig-paths/register -r ts-node/register src/server.ts",
    "build": "tsc",
    "production": "node -r tsconfig-paths/register build/server.js"
  },
  "dependencies": {
    "@ahryman40k/ts-fhir-types": "^4.0.36",
    "@sentry/node": "^6.13.3",
    "@sentry/tracing": "^6.13.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "supertest": "^6.1.6",
    "tsconfig-paths": "^3.11.0",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/formidable": "^1.2.4",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "es6": true,
      "node": true
    }
  }
}
